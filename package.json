{
  "name": "janitor",
  "version": "1.0.0",
  "description": "Tidies up Carto Storage by checking for stale Dicord channels",
  "main": "build/src/index.js",
  "scripts": {
    "prebuild": "rimraf build/",
    "postbuild": "copyfiles .env build/",
    "build": "tsc",
    "build:package": "copyfiles build/**/* package.json package-lock.json package",
    "dev": "cross-env FIRESTORE_EMULATOR_HOST=localhost:8080 STORAGE_EMULATOR_HOST=http://localhost:9199 functions-framework --source=build/src/ --target=test --signature-type=event --port 3000",
    "emulators": "firebase emulators:start --project janitor --import=./firebase-data --export-on-exit",
    "start": "functions-framework --source=build/src/ --target=trigger --signature-type=event",
    "test": "jest --watch",
    "test:ci": "jest",
    "test:coverage": "jest --collectCoverage",
    "watch": "concurrently \"tsc -w\" \"nodemon --watch ./build/ --exec npm run start\""
  },
  "author": "Miles Bardon",
  "license": "ISC",
  "dependencies": {
    "@google-cloud/firestore": "4.15.1",
    "@google-cloud/storage": "5.14.3",
    "discord.js": "13.1.0"
  },
  "devDependencies": {
    "@google-cloud/functions-framework": "1.9.0",
    "@types/jest": "27.0.2",
    "@types/node": "15.6.1",
    "concurrently": "6.2.1",
    "copyfiles": "2.4.1",
    "cross-env": "7.0.3",
    "firebase-tools": "9.18.0",
    "firestore-jest-mock": "0.17.0",
    "jest": "27.2.1",
    "nodemon": "2.0.12",
    "rimraf": "3.0.2",
    "ts-jest": "27.0.5",
    "typescript": "4.4.3"
  }
}
